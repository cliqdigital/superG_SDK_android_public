<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout0"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/transparent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/appsilike_background_popup"
        android:orientation="vertical"
        android:weightSum="1" >

        <LinearLayout
            android:id="@+id/verticalSpacer"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight=".025"
            android:background="@color/transparent"
            android:orientation="horizontal" >
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight=".9"
            android:background="@color/transparent" >

            <LinearLayout
                android:id="@+id/innerBox"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:background="@color/transparent"
                android:orientation="horizontal"
                android:weightSum="1" >

                <LinearLayout
                    android:id="@+id/horizontalSpacer"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight=".03"
                    android:background="@color/transparent"
                    android:orientation="vertical" >
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/RelativeLayout2"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="@dimen/_6sp"
                    android:layout_marginTop="@dimen/_8dp"
                    android:layout_weight=".96"
                    android:background="@drawable/appsilike_border"
                    android:fitsSystemWindows="true"
                    android:orientation="horizontal" >

                    <android.webkit.WebView
                        android:id="@+id/tbrlay_dialog_webview"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/appsilike_border"
                        android:visibility="invisible" >
                    </android.webkit.WebView>

                    <FrameLayout
                        android:id="@+id/web_fram"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_centerInParent="true"
                        android:background="@color/black"
                        android:visibility="invisible" >
                    </FrameLayout>

                    <TextView
                        android:id="@+id/grid_item_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="false"
                        android:gravity="center_horizontal"
                        android:text="@string/versionName"
                        android:textColor="@color/lightgrey"
                        android:textSize="@dimen/_6sp"
                        android:visibility="invisible" />

                    <ProgressBar
                        android:id="@+id/img_loading_web"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_marginTop="@dimen/_15dp"
                        android:adjustViewBounds="true"
                        android:visibility="invisible" />

                    <ProgressBar
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_marginTop="@dimen/_15dp"
                        android:adjustViewBounds="true"
                        android:visibility="invisible" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/img_dialog_header_close"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="@dimen/minus4"
                    android:layout_marginLeft="@dimen/minus28"
                    android:adjustViewBounds="false"
                    android:fitsSystemWindows="false"
                    android:src="@drawable/appsilike_close_button" />
            </LinearLayout>
        </RelativeLayout>

        <Button
            android:id="@+id/bottom_close"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".08"
            android:background="@color/transparent"
            android:text="" />
    </LinearLayout>

</RelativeLayout>